{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": ["error", "always"],
        "new-cap": ["warn", { "capIsNew": false }],
        "comma-dangle": "off",
        "space-before-function-paren": "off"
    }
}
